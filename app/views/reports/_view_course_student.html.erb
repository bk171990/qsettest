<font color="green"> <b>Total Students applied for this course </b></font> <%=@course_students.count%> 
 <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example" >
            <thead>
              <tr>
              <th>Student Name</th>
              <th>University Name</th>
              <th>Course</th>
              <th>Enrollment No</th>
              <th></th>
             </tr>
           </thead>
           <tbody>
      
          <%unless @course_students.nil?%>
            <% @course_students.each do |b|%>
            <tr class="gradeX">
            <td><%= b.first_name+"-"+b.last_name%></td>
            <td><%= b.university.university_name%></td>
            <td><%= b.course.course_name %></td>
            <td><%= b.enrollment %></td>
            <td><%= link_to 'View Profile', student_path(b), class: 'btn btn-link'%></td>
            </tr>
           <%end%>
           <%end%>
          </tbody>
        </table>
      </div>

      