<%= render 'layouts/messages'%> 
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading clearfix">
        <h3 class="panel-title">Course Details</h3>
        <ul class="panel-tool-options"> 
          <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
          <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
          <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
        </ul>
      </div>
      <div class="panel-body">
         <div class="panel-body collapse in" id="collapsepanel">
            <ol class="breadcrumb breadcrumb-2"> 
              <li><a href="/home/dashboard"><i class="icon-folder"></i>Home</a></li> 
              <li class="active">Courses</li> 
            </ol> 
          </div>
           <%= link_to 'New Course', new_course_path, class: 'btn btn-red btn-outline' %><p>&nbsp;</p>

        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example" >
            <thead>
              <tr>
              <th>Sr No</th>
              <th>Course Name</th>
<!--               <th>University</th>
 -->              <th>Status</th>
              <th></th>
              <th></th>
             </tr>
           </thead>
           <tbody>
           <% @courses.each_with_index do |course,i| %>
           <tr>
              <td><%= i+1 %></td>
              <td><%= course.course_name %></td>
<!--               <td><%= course.university.university_name %></td>
 -->              <td><%= course.no_of_seats %></td>
              <td><%= link_to 'Show', course,class: "btn btn-blue btn-sm" %></td>
              <td><%= link_to 'Edit', edit_course_path(course),class: "btn btn-success btn-sm" %></td>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>




<script>
  $(document).ready(function () {
    $('.dataTables-example').DataTable({
      dom: '<"html5buttons" B>lTfgitp',
      buttons: [
      {
        extend: 'copyHtml5',
        exportOptions: {
          columns: [ 0, ':visible' ]
        }
      },
      {
        extend: 'excelHtml5',
        exportOptions: {
          columns: ':visible'
        }
      },
      {
        extend: 'pdfHtml5',
        exportOptions: {
          columns: [ 0, 1, 2, 3, 4 ]
        }
      },
      'colvis'
      ]
    });
  });
</script>
