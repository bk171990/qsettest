                    <%else%>
                       <strong><font color="red">Document Sent For MCI</font></strong>
                    <%end%></li>

                    <li>   <% if @student.mci_acknowledgement == "true"%>
                           <strong><font color="green">MCI Acknowledgement</font></strong>&nbsp;&nbsp;<i class="fa fa-check"></i>
                           <%else%>
                           <strong><font color="red">MCI Acknowledgement</font></strong>

                        <%end%></li> 
                    <% if @student.admission_letter_attachment.present?%>
                   <strong><font color="green">Admission Letter</font></strong>&nbsp;&nbsp;<i class="fa fa-check"></i>
                    <td><%= link_to "Download", @student.admission_letter_attachment_url, class: 'btn btn-link' %></td>
                  <%end%></li>

                    <li><% if @student.mci_eligibility_certificate== "true"%>
                <strong><font color="green">MCI Eligibilty Certificate</font></strong>&nbsp;&nbsp;<i class="fa fa-check"></i>
                 <td><%= link_to "Download", @student.mci_eligibility_criteria_certificate_attachment_url, class: 'btn btn-link' %></td>
                <%else%>
                   <strong><font color="red">MCI Eligibilty Certificate</font></strong>
                <%end%></li>   
                    </li> 
                  </ul>
                        =><font color="blue">Visa</font>
 
