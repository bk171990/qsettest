<%= render 'layouts/messages'%> 
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading clearfix">
        <h3 class="panel-title">Enquiries</h3>
        <ul class="panel-tool-options"> 
          <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
          <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
          <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
        </ul>
      </div>
      <div class="panel-body">
                  <%= link_to 'New Enquiry', new_enquiry_path, class: 'btn btn-red btn-outline' %><p>&nbsp;</p>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example" >
            <thead>
              <tr>
               <th>Sr No</th>
              <th>Full name</th>
              <th>Email</th>
              <th>Remarks</th>
               <th></th>
               <th></th>
             </tr>
           </thead>
           <tbody>
         <% @enquiries.each_with_index do |enquiry,i| %>
            <tr>
              <td><%=i + 1%></td>
              <td><%= enquiry.full_name %></td>
              <td><%= enquiry.email %></td>
              <td><%= link_to 'Remarks', remark_enquiry_path(enquiry),class: "btn btn-red btn-sm" %></td>
              <td><%= link_to 'Show', enquiry,class: "btn btn-blue btn-sm" %></td>
              <td><%= link_to 'Edit', edit_enquiry_path(enquiry),class: "btn btn-success btn-sm" %></td>
           </tr>
    <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>




<script>
  $(document).ready(function () {
    $('.dataTables-example').DataTable({
      dom: '<"html5buttons" B>lTfgitp',
      buttons: [
      {
        extend: 'copyHtml5',
        exportOptions: {
          columns: [ 0, ':visible' ]
        }
      },
      {
        extend: 'excelHtml5',
        exportOptions: {
          columns: ':visible'
        }
      },
      {
        extend: 'pdfHtml5',
        exportOptions: {
          columns: [ 0, 1, 2, 3, 4 ]
        }
      },
      'colvis'
      ]
    });
  });
</script>
