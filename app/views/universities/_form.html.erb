<%= form_with(model: university, local: true,html: { multipart: true }) do |form| %>
  <% if university.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(university.errors.count, "error") %> prohibited this university from being saved:</h2>

      <ul>
      <% university.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <form class="form-horizontal">

     <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">University Name<font color="red">*</font></label>
    <%= form.text_field :university_name, id: :university_university_name , placeholder: 'University Name',class: 'form-control'%>
  </div>
</div>


    <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Country<font color="red">*</font></label>
<%=country_select("center", "country", { priority_countries: ["IN", "FR"], selected: "IN" }, { class: 'form-control', data: { attribute: "value" } })%>
  </div></div>

  
    <%= form.fields_for :unversity_attachments do |p| %>
      <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-8 control-label">Add Attachment<font color="red">*</font></label>
       <%= p.file_field :attachment, as: :file,:multiple => true,name: "unversity_attachments[attachment][]" ,class: 'form-control'%>
        <br>  <br>
     </div>
     </div>

        <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-8 control-label">Add Attachment Name </label>
      <%= p.text_field :attachment_name , placeholder: 'Add Attachment Name',class: 'form-control' %>
        </div>
      </div>
   <% end %>

 <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Fees 
            <font color="red">*</font></label>
    <%= form.text_field :fees, id: :fees , placeholder: 'Fees',class: 'form-control'%>
  </div>
</div>


   <div class="form-group">
        <div class="col-md-4">
