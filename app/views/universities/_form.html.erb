    <%= form.text_field :no_of_seats, id: :university_no_of_seats , placeholder: 'No of Seats',class: 'form-control'%>
  </div>
  </div>


   <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">University Details</label>
    <%= form.text_area :description, id: :university_description , placeholder: 'University Details',class: 'form-control',style: "width:300px;height: 250px;"%>
  <br><br>
  </div>
  </div>

