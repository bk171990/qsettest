 <div class="table-responsive">
  <table class="table table-striped table-bordered table-hover dataTables-example" >
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Country</th>
      <th></th>
    </tr>
  </thead>

  <% if @colleges.present? %>

  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><%= college.name %></td>
        <td><%= college.city %></td>
        <td><%= college.country %></td>
        <td><%= link_to 'Show', college, class: 'btn btn-primary btn-xls' %>
        <%= link_to 'Edit', edit_college_path(college), class: 'btn btn-warning btn-xls' %>
        <%= link_to 'Delete', college, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-xls'%></td>
      </tr>
    <% end %>
  </tbody>
  
  <% else %>
  <p> No entry found </p>
  <% end %>
</table>
 </div>
