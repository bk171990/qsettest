 <h1>Colleges</h1>
<%= render 'layouts/messages'%> 
 <div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading clearfix">
        <h3 class="panel-title">College Details</h3>
        <ul class="panel-tool-options"> 
          <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
          <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
          <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
        </ul>
      </div>
      <div class="panel-body">
  <%= link_to 'New College', new_college_path, class: 'btn btn-red btn-outline' %><p>&nbsp;</p>


<div class="table-responsive">
 <table class="table table-striped table-bordered table-hover dataTables-example" >
  <thead>
    <tr>
      <th><b>Name</b></th>
      <th><b>City</b></th>
      <th><b>Country</b></th>
      <th><b>Budget</b></th>
    </tr>
  </thead>

 <tbody>
  <% @colleges.each_with_index do |r, i| %>

    <% if r.fees.to_i.between?(@budget_from, @budget_to) %>
    
      <tr>
        <td><%= r.name %></td>
        <td><%= r.city %></td>
        <td><%= r.country %></td>
        <td><%= r.fees %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
  </table>
  <br>
  <b><%= link_to 'Back',new1_colleges_path  , class: 'btn btn-red'%>  

  </br>
  </div>
  </div>
  </div>
  </div>

  <script>
  $(document).ready(function () {
    $('.dataTables-example').DataTable({
      dom: '<"html5buttons" B>lTfgitp',
      buttons: [
      {
        extend: 'copyHtml5',
        exportOptions: {
          columns: [ 0, ':visible' ]
        }
      },
      {
        extend: 'excelHtml5',
        exportOptions: {
          columns: ':visible'
        }
      },
      {
        extend: 'pdfHtml5',
        exportOptions: {
          columns: [ 0, 1, 2, 3, 4 ]
        }
      },
      'colvis'
      ]
    });
  });
</script>
