<%= render 'layouts/messages'%> 
<%#= render_activities(@activities) %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading clearfix">
        <h3 class="panel-title">User Activity Details</h3>
        <ul class="panel-tool-options"> 
          <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
          <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
          <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
        </ul>
      </div>
      <div class="panel-body">
           <%#= link_to 'New Center', new_center_path, class: 'btn btn-red btn-outline' %><p>&nbsp;</p>

        <div class="table-responsive">
         <table class="table table-striped table-bordered table-hover dataTables-example" >
        <thead>
          <tr>
            <th>Sr.No.</th>
            <th>Date</th>
            <th>User</th>
            <th>Role</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>

        <% @acts.each_with_index do |a, i| %>
          <tr>
            <td>
              <%= i+1 %>
            </td>
            <td>
              <%= link_to a.created_at, user_activity_home_path(a), class: 'btn btn-link' %>
            </td>
            <td>
              <%= a.user.email%>
            </td>
            <td>
              <%= a.user.role%>
            </td>
            <td>
              <%= [a.action, a.modelname].join(' ')%>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>


<script>
  $(document).ready(function () {
    $('.dataTables-example').DataTable({
      dom: '<"html5buttons" B>lTfgitp',
      buttons: [
      {
        extend: 'copyHtml5',
        exportOptions: {
          columns: [ 0, ':visible' ]
        }
      },
      {
        extend: 'excelHtml5',
        exportOptions: {
          columns: ':visible'
        }
      },
      {
        extend: 'pdfHtml5',
        exportOptions: {
          columns: [ 0, 1, 2, 3, 4 ]
        }
      },
      'colvis'
      ]
    });
  });
</script>
