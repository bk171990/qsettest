<%= render 'layouts/messages'%> 
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading clearfix">
        <h3 class="panel-title">Student Details</h3>
        <ul class="panel-tool-options"> 
          <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
          <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
          <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
        </ul>
      </div>
      
      <div class="panel-body">
         <%=link_to "Export Excel",export_report_receipts_path(format: "xlsx"), class: 'btn btn-primary'  %> 
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example" >
            <thead>
              <tr>
               <th>SR No</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Contact no</th>
                <th>Center</th>
                <th></th>
             </tr>
           </thead>
           <tbody>
         <% @students.each_with_index do |student,i|%>
            <tr class="gradeX">
              <td><%= i+1 %></td>
              <td><%= student.first_name %></td>
              <td><%= student.last_name %></td>
              <td><%= student.contact_no %></td>
              <td><%= student.center.center_name %></td>
              <td><%= link_to 'Generate Receipt',generate_receipt_receipt_path(student), class: 'btn btn-success' %></td>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>




<script>
  $(document).ready(function () {
    $('.dataTables-example').DataTable({
      dom: '<"html5buttons" B>lTfgitp',
      buttons: [
      {
        extend: 'copyHtml5',
        exportOptions: {
          columns: [ 0, ':visible' ]
        }
      },
      {
        extend: 'excelHtml5',
        exportOptions: {
          columns: ':visible'
        }
      },
      {
        extend: 'pdfHtml5',
        exportOptions: {
          columns: [ 0, 1, 2, 3, 4 ]
        }
      },
      'colvis'
      ]
    });
  });
</script>
